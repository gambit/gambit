        exc
        'not-abandoned-mutex-exception))}
> @b{(with-exception-catcher
    handler
    (lambda ()
      (let ((m (make-mutex)))
        (thread-join!
          (thread-start!
            (make-thread
              (lambda () (mutex-lock! m)))))
        (mutex-lock! m))))}
#<abandoned-mutex-exception #2>
@end smallexample

@end deffn

